<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/transaction"


    android:layout_marginBottom="10dp"
    android:background="@drawable/transcorner"
    android:elevation="2dp">




    <TextView
        android:id="@+id/notification_textview_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:maxEms="13"

        android:layout_marginTop="10sp"
        android:layout_toRightOf="@+id/transaction_textview_plusminus"

        android:textColor="@color/homePrimaryDark"
        android:textSize="12sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_textview_message"
        android:layout_marginStart="10sp"
        android:textSize="12sp"
        android:layout_marginBottom="10sp"
        android:textColor="@color/homePrimaryDark"
        android:layout_marginTop="5dp"
        android:id="@+id/notification_textview_date"
        android:layout_toRightOf="@+id/transaction_textview_plusminus"
       />





</RelativeLayout>