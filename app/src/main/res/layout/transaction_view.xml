<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/transaction"


        android:layout_marginBottom="10dp"
        android:background="@drawable/transcorner"
        android:elevation="2dp">


        <TextView
            android:id="@+id/transaction_textview_plusminus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#4CAF50"
            android:layout_marginStart="10sp"

            android:text="+"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/transaction_textview_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:maxEms="13"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@+id/transaction_textview_plusminus"
            android:text="The Message"
            android:textColor="#05135E"
            android:textSize="16sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/transaction_textview_message"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="12sp"
            android:id="@+id/transaction_textview_date"
            android:layout_toRightOf="@+id/transaction_textview_plusminus"
            android:text="date and time" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15sp"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="â‚¹ " />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:id="@+id/transaction_textview_amount"
                android:textColor="#05B0FB"
                android:textSize="20sp" />


        </LinearLayout>


    </RelativeLayout>

