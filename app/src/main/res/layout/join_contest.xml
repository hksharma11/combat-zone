<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinContest">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#1e88e5"

        android:id="@+id/toolbar"
        android:background="@drawable/hometoolbar"


        >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Contest"
            android:textColor="#fff"
            android:fontFamily="serif"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            />





    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Game Username:"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="15sp"
            android:textColor="#000"
            android:textSize="16sp"
            />


        <EditText

            android:background="@drawable/btn_corner5"
            android:padding="10dp"
            android:id="@+id/join_contest_edittext_username"
            android:layout_width="match_parent"
            android:layout_marginStart="15sp"
            android:layout_marginTop="5dp"

            android:layout_marginEnd="15sp"

            android:layout_height="wrap_content"
            android:singleLine="true"

            android:inputType="text"/>


        <TextView
            android:id="@+id/join_contest_textview_rule1"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#616161"
            android:layout_marginTop="10sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10sp"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15sp"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="Balance "/>

            <TextView
                android:id="@+id/join_contest_textview_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15sp"

                android:textColor="#000"
                android:textSize="15dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15sp"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="To Pay "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15sp"
                android:textSize="15dp"
                android:id="@+id/join_contest_textview_payamounnt"
                android:textColor="#000"
                />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/join_contest_textview_rule2"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:textSize="12sp"
            android:layout_marginTop="10sp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Join Contest"
            android:paddingStart="20sp"
            android:id="@+id/join_contest_button_joingame"
            android:paddingEnd="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_rounded_red"/>




    </LinearLayout>






</RelativeLayout>