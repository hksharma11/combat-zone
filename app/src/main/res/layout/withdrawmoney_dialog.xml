<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"

        android:id="@+id/head"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#05B0FB"
            android:layout_marginTop="10sp"
            android:text="Withdraw Money"
            android:id="@+id/heading"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif"
            android:textSize="25sp"/>



        <View
            android:layout_width="27sp"


            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="15sp"
            android:id="@+id/withdrawmoney_dialog_view_close"
            android:layout_height="27sp"
            android:backgroundTint="#000"
            android:background="@drawable/close"/>



    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#616161"
        android:layout_below="@+id/head"
        android:id="@+id/view2"
        android:layout_marginTop="10sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/view2"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Paytm Number:"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"

            android:layout_marginEnd="15sp"

            android:textColor="#000"
            android:textSize="16sp"
            />


        <EditText

            android:background="@drawable/btn_corner5"
            android:padding="10dp"
            android:maxLength="10"
            android:layout_width="match_parent"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="5sp"
            android:id="@+id/withdrawmoney_dialog_edittext_paytm_number"

            android:layout_height="wrap_content"
            android:singleLine="true"

            android:inputType="number"/>












        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount To Withdraw:"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:id="@+id/headd"
            android:layout_marginEnd="15sp"

            android:textColor="#000"
            android:textSize="16sp"
            />


        <EditText

            android:background="@drawable/btn_corner5"
            android:padding="10dp"
            android:id="@+id/withdrawmoney_dialog_edittext_amount"
            android:layout_width="match_parent"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="5sp"


            android:layout_height="wrap_content"
            android:singleLine="true"

            android:inputType="number"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:backgroundTint="#fff"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/account_checkbox"
                android:text="I ACCEPT ALL "



                android:textSize="16dp"
                android:textColor="#000"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0022FF"
                android:text="TERMS AND CONDITONS"
                android:id="@+id/withdrawmoney_dialog_textview_term"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                />

        </LinearLayout>




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Withdraw"
            android:layout_gravity="center"
            android:paddingStart="20sp"

            android:paddingEnd="20sp"
            android:id="@+id/withdrawmoney_dialog_button_withdraw"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_rounded_red"/>


    </LinearLayout>






</RelativeLayout>