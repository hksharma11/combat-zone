<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Refer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#1e88e5"

        android:id="@+id/toolbar"
        android:background="@drawable/hometoolbar"


        >


        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20sp"
            android:id="@+id/refer_view_back"
            android:backgroundTint="#fff"
            android:background="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refer and Earn"
            android:textColor="#fff"
            android:fontFamily="serif"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            />





    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10sp"
        android:id="@+id/head"
        android:layout_below="@+id/toolbar"
        android:backgroundTint="@color/homeAccent"
        android:background="@drawable/walletcorner"

        >

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/referandearn"
            android:layout_gravity="center_horizontal"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REFER MORE TO EARN MORE"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="14sp"
            android:textColor="#fff"
            android:id="@+id/refer_textview_message"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:id="@+id/head1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Referral Code"


            android:textColor="#000"
            android:textSize="20sp"

            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refer_textview_refer_code"
            android:textSize="22sp"
            android:visibility="gone"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:background="@drawable/dotted"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Get Refer Code"
            android:textColor="#fff"
            android:visibility="gone"
            android:paddingEnd="10sp"
            android:id="@+id/refer_button_get_refer_code"
            android:textSize="15sp"
            android:paddingStart="10sp"
            android:backgroundTint="#4CAF50"
            android:background="@drawable/btn_corner5"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOW DOES IT WORKS?"
            android:layout_marginTop="20dp"

            android:textColor="#F44336"
            android:textSize="18sp"

            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rules"
        android:orientation="vertical"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/head1"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="12sp"
            android:id="@+id/refer_textview_step1"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="12sp"
            android:id="@+id/refer_textview_step2"
            android:layout_marginTop="10sp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="12sp"
            android:layout_marginTop="10sp"
            android:layout_marginStart="30sp"
            android:id="@+id/refer_textview_step3"
            android:layout_marginEnd="30sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="12sp"
            android:id="@+id/refer_textview_step4"
            android:layout_marginTop="10sp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="10sp"
            android:id="@+id/refer_textview_step5"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:gravity="center"/>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rules"
        android:layout_margin="30sp"
        android:background="@drawable/btn_corner5"
        android:id="@+id/refer_button_refer_now"
        android:textColor="#fff"
        android:backgroundTint="@color/homePrimaryDark"
        android:text="refer now"
        android:textSize="20sp"
        />

</RelativeLayout>