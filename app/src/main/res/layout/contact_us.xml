<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#1e88e5"

            android:id="@+id/toolbar"
            android:background="@drawable/hometoolbar"


            >


            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20sp"
                android:id="@+id/contact_us_view_back"
                android:backgroundTint="#fff"
                android:background="@drawable/back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textColor="#fff"
                android:fontFamily="serif"
                android:layout_centerInParent="true"
                android:textSize="25sp"
                />





        </RelativeLayout>





        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginStart="15sp"
            android:id="@+id/phone"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/transcorner"
            android:elevation="2dp">




            <TextView
                android:id="@+id/transaction_textview_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:maxEms="13"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/transaction_textview_plusminus"
                android:text="Phone"
                android:textColor="#05135E"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transaction_textview_message"
                android:layout_marginStart="10sp"
                android:layout_marginBottom="12sp"

                android:id="@+id/contact_us_textview_phone"
                android:layout_toRightOf="@+id/transaction_textview_plusminus"
                android:text="8957691361" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10sp"
                android:id="@+id/contact_us_view_phone"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/homePrimary"
                android:background="@drawable/phone"/>








        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:id="@+id/whatsapp"

            android:layout_marginBottom="10dp"
            android:background="@drawable/transcorner"
            android:elevation="2dp">




            <TextView
                android:id="@+id/transaction_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:maxEms="13"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/transaction_textview_plusminus"
                android:text="Whatsapp"
                android:textColor="#05135E"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transaction_textview"
                android:layout_marginStart="10sp"
                android:layout_marginBottom="12sp"
                android:id="@+id/contact_us_textview_whatsapp"
                android:layout_toRightOf="@+id/transaction_textview_plusminus"
                android:text="8957691361" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10sp"
                android:id="@+id/contact_us_view_whatsapp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/homePrimary"
                android:background="@drawable/whatsapp"/>








        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/whatsapp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:id="@+id/telegram"

            android:layout_marginBottom="10dp"
            android:background="@drawable/transcorner"
            android:elevation="2dp">




            <TextView
                android:id="@+id/transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:maxEms="13"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/transaction_textview_plusminus"
                android:text="Telegram"
                android:textColor="#05135E"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transaction"
                android:layout_marginStart="10sp"
                android:layout_marginBottom="12sp"
                android:id="@+id/contact_us_textview_telegram"
                android:layout_toRightOf="@+id/transaction_textview_plusminus"
                android:text="8957691361" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10sp"
                android:layout_alignParentEnd="true"
                android:id="@+id/contact_us_view_telegram"
                android:backgroundTint="@color/homePrimary"
                android:background="@drawable/telegram"/>








        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/telegram"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:id="@+id/instagram"

            android:layout_marginBottom="10dp"
            android:background="@drawable/transcorner"
            android:elevation="2dp">




            <TextView
                android:id="@+id/transactio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:maxEms="13"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/transaction_textview_plusminus"
                android:text="Instagram"
                android:textColor="#05135E"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transactio"
                android:layout_marginStart="10sp"
                android:layout_marginBottom="12sp"
                android:id="@+id/contact_us_textview_instagram"
                android:layout_toRightOf="@+id/transaction_textview_plusminus"
                android:text="__combat_zone__" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10sp"
                android:layout_alignParentEnd="true"
                android:id="@+id/contact_us_view_instagram"
                android:backgroundTint="@color/homePrimary"
                android:background="@drawable/instagram"/>








        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/instagram"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:id="@+id/email"

            android:layout_marginBottom="10dp"
            android:background="@drawable/transcorner"
            android:elevation="2dp">




            <TextView
                android:id="@+id/transacti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:maxEms="13"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/transaction_textview_plusminus"
                android:text="Email"
                android:textColor="#05135E"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transacti"
                android:layout_marginStart="10sp"
                android:layout_marginBottom="12sp"
                android:id="@+id/contact_us_textview_email"
                android:layout_toRightOf="@+id/transaction_textview_plusminus"
                android:text="hk.harshkumar11@gmail.com" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10sp"
                android:layout_alignParentEnd="true"
                android:id="@+id/contact_us_view_email"
                android:backgroundTint="@color/homePrimary"
                android:background="@drawable/gmail"/>








        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:text="OR"
            android:id="@+id/or"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/or"
            android:layout_marginTop="10sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Subject"
                android:fontFamily="sans-serif-condensed"/>


            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/btn_corner5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <EditText
                    android:id="@+id/contact_us_edittext_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:inputType="text"
                    android:padding="10dp"

                    android:singleLine="true" />


            </LinearLayout>






            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Description"
                android:fontFamily="sans-serif-condensed"/>


            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/btn_corner5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >


                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:id="@+id/contact_us_edittext_description"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:padding="10dp"

                    android:singleLine="true" />


            </LinearLayout>




            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:layout_gravity="center"
                android:background="@drawable/btn_rounded_red"
                android:textSize="20sp"
                android:textColor="#fff"
                android:id="@+id/contact_us_button_send"
                android:layout_marginTop="20sp"/>


        </LinearLayout>


    </RelativeLayout>
</ScrollView>

