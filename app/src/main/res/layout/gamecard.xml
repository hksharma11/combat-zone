<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"


    android:paddingStart="5sp"
    android:paddingEnd="5sp"
    android:layout_marginBottom="10sp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120dp"
        android:layout_marginBottom="-12sp"
        android:elevation="1dp"

        android:layout_centerHorizontal="true"
        android:id="@+id/layout0"
        android:padding="5dp"


        android:background="@drawable/header">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/data1"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="serif"/>


    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/sample_upper"
        android:backgroundTint="#FBA019"
        android:id="@+id/layout1"
        android:layout_below="@id/layout0"
        android:layout_height="45dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:textColor="#fff"
            android:id="@+id/data3"
            android:layout_marginStart="10dp"

            android:layout_centerVertical="true"
            android:fontFamily="serif"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="13sp"
            android:paddingStart="5dp"
            android:textColor="#fff"
            android:id="@+id/data2"
            android:paddingEnd="10dp"
            android:backgroundTint="#303f9f"
            android:background="@drawable/sample_upper2"
            android:layout_alignParentEnd="true"


            android:fontFamily="sans-serif"/>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_below="@+id/layout1"
        android:id="@+id/layout2"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5sp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/data4"
                android:textSize="12sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:id="@+id/data5"
                android:textColor="#303f9f"
                />


        </LinearLayout>

        <View
            android:background="#ffe0e0e0"
            android:layout_width="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10sp"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5sp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/data6"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:id="@+id/data7"
                android:textColor="#303f9f"
                />


        </LinearLayout>


        <View
            android:background="#ffe0e0e0"
            android:layout_width="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10sp"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5sp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/data8"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:id="@+id/data9"
                android:layout_marginTop="2dp"
                android:textColor="#303f9f"
                />


        </LinearLayout>



        <View
            android:background="#ffe0e0e0"
            android:layout_width="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10sp"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5sp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/data10"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:id="@+id/data11"
                android:layout_marginTop="2dp"
                android:textColor="#303f9f"
                />


        </LinearLayout>



    </LinearLayout>

    <View
        android:background="#ffe0e0e0"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout2"
        android:id="@+id/layout3"
        android:layout_height="0.5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_below="@+id/layout3"
        android:id="@+id/layout4"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/data12"
                android:layout_marginStart="10sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:id="@+id/data13"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10sp"
                android:textColor="#303f9f"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gamecard_linearlayout_winner"
                android:gravity="center"


                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/data14"
                    android:textSize="12sp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/data15"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"

                    android:textColor="#FBA019"
                    />


            </LinearLayout>

            <View
                android:layout_width="60dp"
                android:id="@+id/divider_view"
                android:layout_height="0dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/gamecard_linearlayout_perkill"
                android:layout_height="wrap_content"
                android:gravity="center"


                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:id="@+id/data16"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/data17"
                    android:textColor="#FBA019"
                    />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="end"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/data18"

                android:layout_marginEnd="20sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:id="@+id/data19"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20sp"
                android:textColor="#303f9f"
                />



        </LinearLayout>


    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout4"
        android:id="@+id/gamecard_progressbar"

        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/gamecard_progressbar"
        android:id="@+id/layout6"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:id="@+id/data20"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:id="@+id/data21"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/sample_lower"
        android:backgroundTint="#FBA019"
        android:layout_marginTop="10sp"
        android:layout_below="@id/layout6"
        android:visibility="gone"
        android:id="@+id/gamecard_relative_layout_joined"
        android:layout_height="45dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

          android:text="JOINED"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="13dp"/>




    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/sample_lower"
        android:backgroundTint="#303f9f"
        android:layout_marginTop="10sp"
        android:visibility="gone"
        android:layout_below="@id/layout6"
        android:id="@+id/gamecard_relative_layout_joincontest"
        android:layout_height="45dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/data22"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="13dp"/>




    </RelativeLayout>


</RelativeLayout>